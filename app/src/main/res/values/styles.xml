<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="CalculatorButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">@color/button_default</item>
    </style>

    <style name="OperationButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">@color/button_operation</item>
    </style>

    <style name="ClearButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">@color/button_clear</item>
    </style>

    <style name="EqualButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">@color/button_equal</item>
    </style>
</resources>